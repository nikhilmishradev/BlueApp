<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:padding="@dimen/dimen_20dp">    <TextView        style="@style/open_sans_bold_black_14"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/dimen_10dp"        android:padding="@dimen/dimen_5dp"        android:text="@string/statistics"        android:textAlignment="center"        android:textColor="@color/dark_blue"        android:textSize="@dimen/text_16sp"        android:textStyle="bold" />    <TextView        android:id="@+id/total_items_tv"        style="@style/open_sans_bold_black_14"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/dimen_10dp"        android:padding="@dimen/dimen_5dp"        android:textColorHighlight="@color/dark_blue" />    <TextView        style="@style/open_sans_medium_black_12"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/dimen_20dp"        android:layout_marginBottom="@dimen/dimen_8dp"        android:padding="@dimen/dimen_5dp"        android:text="@string/top_chars" />    <TextView        android:id="@+id/stats_data_tv"        style="@style/open_sans_medium_black_12"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/dimen_10dp"        android:layout_marginBottom="@dimen/dimen_20dp"        android:padding="@dimen/dimen_10dp" />    <Button        android:id="@+id/close_btn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/dark_blue"        android:text="@string/close"        android:textAllCaps="false"        android:textColor="@color/white"        android:textSize="@dimen/text_12sp" /></LinearLayout>